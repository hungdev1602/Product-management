extends ../../layouts/default.pug
block main
  h1(class="mb-4") #{pageTitle}
  h5 Tài khoản: #{user.fullName}
  form(
    action=`/${prefixAdmin}/accounts/my-profile/edit?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="fullName") Họ tên
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=user.fullName
        required
      )

    div(class="form-group")
      label(for="email") Email
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        value=user.email
        required
      )

    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=user.phone
        required
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Đổi thông tin cá nhân