extends ../../layouts/default.pug

block main 
  h1 Trang thùng rác

  table.table.table-hover.table-sm
        thead
          tr
            th
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Hành động

        tbody
          each item, index in products
            tr 
              td 
                input(type="checkbox" input-change=item._id)
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                button(
                  class="btn btn-warning btn-sm"
                  button-restore=item._id
                  data-path=`/${prefixAdmin}/products/restore`
                ) Khôi phục
                button(
                  class="btn btn-danger btn-sm ml-1"
                  item-id=item._id
                  button-delete-permanently
                  data-path=`/${prefixAdmin}/products/delete-permanently`
                ) Xóa vĩnh viễn