extends ../../layouts/default.pug

block main 
  if(role.permissions.includes("roles_edit"))
    h1 #{pageTitle}

    form(
      action=`/${prefixAdmin}/roles/edit/${roles._id}?_method=PATCH`
      method="POST"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          value=roles.title
          required
        )
      div(class="form-group")
        label(for="desc") Mô tả
        input(
          type="text"
          class="form-control"
          id="desc"
          name="description"
          value=roles.description
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật