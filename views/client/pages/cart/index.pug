extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)

    .row
      .col-12
        table(class="table table-bordered")
          thead
            tr
              th STT
              th Ảnh
              th Tên
              th Giá
              th Số lượng
              th Tổng tiền
              th Hành động
          tbody
            each item, index in products
              tr
                td #{index + 1}
                td
                  img(src=item.thumbnail, alt=item.title width="80px")
                td
                  a(href=`/products/detail/${item.slug}`) #{item.title}
                td #{item.newPrice}$
                td
                  input(
                    type="number"
                    name="quantity"
                    value=item.quantity
                    min="1"
                    item-id="id"
                    style="width: 60px"
                  )
                td #{item.total}$
                td
                  a(
                    href=`/cart/delete/9123898behwbvehb`
                    class="btn btn-danger"
                  ) Xóa
    
        h3(class="text-right") Tổng đơn hàng: #{totalSum.toLocaleString()}$
          
          div(class="text-right mt-3")
            a(href="/checkout" class="btn btn-success") Đặt hàng